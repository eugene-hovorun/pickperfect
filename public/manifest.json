{
  "manifest_version": 3,
  "name": "PickPerfect — Color Picker for Developers",
  "short_name": "PickPerfect",
  "version": "1.0.0",
  "description": "Pick colors from any screen pixel. Copy as HEX, RGB, HSL instantly. Zero bloat, zero tracking, zero DOM injection.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PickPerfect — Pick a color"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Open PickPerfect color picker"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
